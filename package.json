{
  "name": "@digitalwallet/promise-concurrent-executor",
  "version": "1.0.0",
  "description": "This is a library for controlling promise async call",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "pack": "mkdir -p dest && npm pack --pack-destination=dest",
    "publish": "bash ../bin/publish.sh",
    "test:unit": "NODE_OPTIONS=--max-old-space-size=2048 npx jest --runInBand --logHeapUsage --detectOpenHandles --forceExit --errorOnDeprecated --coverage --silent --unhandled-rejections=strict"
  },
  "keywords": [
    "promise",
    "async",
    "concurrency"
  ],
  "author": "satoshi kotaki",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
